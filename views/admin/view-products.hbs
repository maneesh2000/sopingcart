<section>

   <div class="container">

       <div class="row mt-4">

       <a href="/admin/add-product" class="btn btn-success ml-auto">Add products</a>

       </div>
<div class="row mt-4">

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Discription</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>

    {{#each products}}
    <tr>
      <th scope="row">>></th>
      <td>{{this.Nme}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img  style="width: 50px;height:50px" src=" /product-images/{{this._id}}.jpg" alt=""></td>
      <td>

          <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary m-2 ">Edit</a>
         <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">Delete</a>
       
      
      </td>
    </tr>
    {{/each}}
  
  </tbody>
</table>




</div>


   </div> 
</section>